@{
    Layout = null; // Remove if you have a layout
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Library Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary: #4e73df;
            --success: #1cc88a;
            --info: #36b9cc;
            --warning: #f6c23e;
            --danger: #e74a3b;
            --secondary: #858796;
        }

        body {
            background-color: #f8f9fc;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .stat-card {
            border: 0;
            border-radius: 10px;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.1);
            transition: all 0.3s;
            overflow: hidden;
        }

            .stat-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 0.5rem 2rem 0 rgba(58, 59, 69, 0.3);
            }

        .stat-icon {
            font-size: 2rem;
            opacity: 0.7;
        }

        .stat-value {
            font-size: 1.8rem;
            font-weight: 700;
        }

        .chart-container {
            height: 300px;
        }

        .recent-items {
            max-height: 400px;
            overflow-y: auto;
        }
    </style>
</head>
<body>
    <div class="container-fluid py-4">
        <h1 class="mb-4 text-dark"><i class="fas fa-tachometer-alt me-2"></i>Library Dashboard</h1>

        <!-- Stats Cards Row -->
        <div class="row g-4">
            <!-- Total Books -->
            <div class="col-xl-3 col-md-6">
                <div class="stat-card h-100 bg-primary text-white p-4">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <div class="text-uppercase small">Total Books</div>
                            <div class="stat-value">2,548</div>
                        </div>
                        <div class="stat-icon">
                            <i class="fas fa-book"></i>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Members -->
            <div class="col-xl-3 col-md-6">
                <div class="stat-card h-100 bg-success text-white p-4">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <div class="text-uppercase small">Members</div>
                            <div class="stat-value">784</div>
                        </div>
                        <div class="stat-icon">
                            <i class="fas fa-users"></i>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Today's Checkouts -->
            <div class="col-xl-3 col-md-6">
                <div class="stat-card h-100 bg-info text-white p-4">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <div class="text-uppercase small">Today's Checkouts</div>
                            <div class="stat-value">42</div>
                        </div>
                        <div class="stat-icon">
                            <i class="fas fa-clipboard-list"></i>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Overdue Items -->
            <div class="col-xl-3 col-md-6">
                <div class="stat-card h-100 bg-warning text-white p-4">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <div class="text-uppercase small">Overdue Items</div>
                            <div class="stat-value">18</div>
                        </div>
                        <div class="stat-icon">
                            <i class="fas fa-exclamation-triangle"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Charts and Tables -->
        <div class="row mt-4 g-4">
            <!-- Checkout Activity Chart -->
            <div class="col-lg-8">
                <div class="stat-card h-100 p-4 bg-white">
                    <h5 class="card-title mb-3"><i class="fas fa-chart-line me-2"></i>Checkout Activity</h5>
                    <div class="chart-container">
                        <canvas id="checkoutChart"></canvas>
                    </div>
                </div>
            </div>

            <!-- Recent Additions -->
            <div class="col-lg-4">
                <div class="stat-card h-100 p-4 bg-white">
                    <h5 class="card-title mb-3"><i class="fas fa-clock-rotate-left me-2"></i>Recent Additions</h5>
                    <div class="recent-items">
                        <div class="list-group list-group-flush">
                            <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                Artificial Intelligence: A Modern Approach
                                <span class="badge bg-primary rounded-pill">New</span>
                            </a>
                            <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                Clean Code: A Handbook of Agile Software Craftsmanship
                                <span class="badge bg-primary rounded-pill">New</span>
                            </a>
                            <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                The Pragmatic Programmer
                                <span class="badge bg-secondary rounded-pill">3 days</span>
                            </a>
                            <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                Design Patterns: Elements of Reusable Object-Oriented Software
                                <span class="badge bg-secondary rounded-pill">5 days</span>
                            </a>
                            <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                Introduction to Algorithms
                                <span class="badge bg-secondary rounded-pill">1 week</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Checkouts Table -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="stat-card p-4 bg-white">
                    <h5 class="card-title mb-3"><i class="fas fa-exchange-alt me-2"></i>Recent Checkouts</h5>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Book</th>
                                    <th>Member</th>
                                    <th>Checkout Date</th>
                                    <th>Due Date</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Domain-Driven Design</td>
                                    <td>John Smith</td>
                                    <td>May 15, 2023</td>
                                    <td>May 29, 2023</td>
                                    <td><span class="badge bg-success">Active</span></td>
                                </tr>
                                <tr>
                                    <td>JavaScript: The Good Parts</td>
                                    <td>Sarah Johnson</td>
                                    <td>May 14, 2023</td>
                                    <td>May 28, 2023</td>
                                    <td><span class="badge bg-success">Active</span></td>
                                </tr>
                                <tr>
                                    <td>Structure and Interpretation of Computer Programs</td>
                                    <td>Michael Brown</td>
                                    <td>May 10, 2023</td>
                                    <td>May 24, 2023</td>
                                    <td><span class="badge bg-warning">Overdue</span></td>
                                </tr>
                                <tr>
                                    <td>Clean Architecture</td>
                                    <td>Emily Davis</td>
                                    <td>May 5, 2023</td>
                                    <td>May 19, 2023</td>
                                    <td><span class="badge bg-danger">Late</span></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Checkout Activity Chart
        const ctx = document.getElementById('checkoutChart').getContext('2d');
        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
                datasets: [{
                    label: 'Checkouts',
                    data: [120, 190, 150, 220, 180, 250],
                    backgroundColor: 'rgba(78, 115, 223, 0.8)',
                    borderColor: 'rgba(78, 115, 223, 1)',
                    borderWidth: 1
                }, {
                    label: 'Returns',
                    data: [100, 160, 120, 180, 150, 200],
                    backgroundColor: 'rgba(28, 200, 138, 0.8)',
                    borderColor: 'rgba(28, 200, 138, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
</body>
</html>