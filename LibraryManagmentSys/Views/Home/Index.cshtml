@{
    ViewData["Title"] = "Welcome to Library Management System";
}

@section Styles {
    <style>
        :root {
            --primary-color: #2A9D8F;
            --primary-light: #4ABFAD;
            --primary-dark: #1D7A6B;
            --secondary-color: #264653;
            --secondary-light: #3A5E6D;
            --secondary-dark: #1A333D;
            --accent-color: #E9C46A;
            --accent-light: #F4D27E;
            --accent-dark: #D9B24A;
            --dark-color: #2A2A2A;
            --light-color: #F8F9FA;
            --gray-light: #E9ECEF;
            --gray-medium: #DEE2E6;
        }

        body {
            background: var(--light-color);
            color: var(--dark-color);
            font-family: 'Inter', system-ui, -apple-system, sans-serif;
            line-height: 1.6;
            overflow-x: hidden;
        }

        /* Hero Section - Updated with new background */
        .hero-section {
            position: relative;
            height: 100vh;
            min-height: 800px;
            display: flex;
            align-items: center;
            overflow: hidden;
            clip-path: polygon(0 0, 100% 0, 100% 90%, 0 100%);
            margin-bottom: -10%;
            z-index: 2;
            background: linear-gradient(135deg, var(--secondary-dark), var(--secondary-color));
        }

        .hero-pattern {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: radial-gradient(circle at 25% 25%, rgba(255,255,255,0.1) 1px, transparent 1px), radial-gradient(circle at 75% 75%, rgba(255,255,255,0.1) 1px, transparent 1px);
            background-size: 40px 40px;
            opacity: 0.3;
        }

        .hero-content {
            position: relative;
            z-index: 2;
            text-shadow: 0 2px 10px rgba(0,0,0,0.3);
        }

        .hero-title {
            font-size: 4rem;
            font-weight: 800;
            line-height: 1.1;
            letter-spacing: -0.05em;
            margin-bottom: 1.5rem;
            color: white;
            position: relative;
            display: inline-block;
        }

            .hero-title::after {
                content: "";
                position: absolute;
                bottom: -10px;
                left: 0;
                width: 100%;
                height: 4px;
                background: var(--accent-color);
                border-radius: 2px;
            }

        .hero-subtitle {
            font-size: 1.75rem;
            font-weight: 300;
            max-width: 800px;
            margin: 0 auto 2rem;
            color: rgba(255,255,255,0.9);
        }

        /* Action Buttons */
        .action-buttons .btn {
            padding: 1rem 2.5rem;
            border-radius: 50px;
            font-weight: 600;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            border: 2px solid transparent;
            backdrop-filter: blur(5px);
        }

        .action-buttons .btn-success {
            background: var(--primary-color);
            box-shadow: 0 4px 20px rgba(42, 157, 143, 0.4);
        }

        .action-buttons .btn-outline-light {
            border-color: rgba(255,255,255,0.3);
            background: rgba(255,255,255,0.1);
            color: white;
        }

            .action-buttons .btn-outline-light:hover {
                background: rgba(255,255,255,0.2);
            }


        /* Section Dividers */
        .section-divider {
            position: relative;
            height: 150px;
            margin: -1px 0;
            z-index: 1;
        }

        .divider-primary {
            background: linear-gradient(180deg, var(--secondary-color) 0%, var(--primary-color) 50%, var(--light-color) 100%);
        }

        .divider-light {
            background: linear-gradient(180deg, var(--light-color) 0%, rgba(255,255,255,0.8) 50%, white 100%);
        }

        .divider-white {
            background: linear-gradient(180deg, white 0%, var(--primary-color) 50%, var(--secondary-color) 100%);
        }

        .divider-secondary {
            background: linear-gradient(180deg, var(--secondary-color) 0%, rgba(42,157,143,0.7) 50%, var(--light-color) 100%);
        }

        /* Features Section */
        .features-section {
        padding: 5rem 0;
        background: #f8f9fa;
    }
    
    .feature-card {
        padding: 2.5rem;
        border-radius: 15px;
        height: 100%;
        position: relative;
        overflow: hidden;
        transition: all 0.4s ease;
        box-shadow: 0 10px 30px rgba(0,0,0,0.08);
        background: white;
        text-align: center;
    }
    
    .feature-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 35px rgba(0,0,0,0.12);
    }
    
    .card-1 {
        border-top: 4px solid #6a11cb;
    }
    
    .card-2 {
        border-top: 4px solid #11998e;
    }
    
    .card-3 {
        border-top: 4px solid #f46b45;
    }
    
    .feature-icon {
        font-size: 2.5rem;
        color: white;
        width: 70px;
        height: 70px;
        line-height: 70px;
        border-radius: 50%;
        margin: 0 auto 1.5rem;
        position: relative;
    }
    
    .card-1 .feature-icon {
        background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
    }
    
    .card-2 .feature-icon {
        background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
    }
    
    .card-3 .feature-icon {
        background: linear-gradient(135deg, #f46b45 0%, #eea849 100%);
    }
    
    .feature-card h3 {
        font-size: 1.5rem;
        margin-bottom: 1.2rem;
        color: #333;
    }
    
    .feature-card p {
        color: #666;
        line-height: 1.6;
        margin-bottom: 1.5rem;
    }
    
    .feature-wave {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 10px;
        background: linear-gradient(90deg, transparent, rgba(0,0,0,0.05), transparent);
        animation: wave 2s linear infinite;
    }
    
    .card-1 .feature-wave {
        background: linear-gradient(90deg, transparent, rgba(106,17,203,0.2), transparent);
    }
    
    .card-2 .feature-wave {
        background: linear-gradient(90deg, transparent, rgba(17,153,142,0.2), transparent);
    }
    
    .card-3 .feature-wave {
        background: linear-gradient(90deg, transparent, rgba(244,107,69,0.2), transparent);
    }
    
    @@keyframes wave {
        0% { background-position-x: 0; }
        100% { background-position-x: 200px; }
    }
    
    @@media (max-width: 768px) {
        .feature-card {
            margin-bottom: 2rem;
        }
    }


        /* About Section */
        .about-library {
            padding: 12rem 0 10rem;
            background: white;
            position: relative;
            z-index: 4;
            clip-path: polygon(0 10%, 100% 0, 100% 90%, 0 100%);
            margin-top: -8%;
            margin-bottom: -8%;
        }

            .about-library img {
                border-radius: 1.5rem;
                box-shadow: 0 25px 50px -12px rgba(0,0,0,0.15);
                transition: transform 0.3s;
            }

                .about-library img:hover {
                    transform: rotate(-2deg) scale(1.02);
                }

        /* Statistics Section */
        .library-stats {
            padding: 12rem 0 10rem;
            background: var(--secondary-color);
            position: relative;
            overflow: hidden;
            z-index: 5;
            clip-path: polygon(0 10%, 100% 0, 100% 90%, 0 100%);
            margin-top: -8%;
            margin-bottom: -8%;
        }

            .library-stats::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: repeating-linear-gradient( 45deg, rgba(255,255,255,0.05) 0px, rgba(255,255,255,0.05) 20px, transparent 20px, transparent 40px );
            }

        .stat-box {
            margin-bottom: 30px;
            color: white;
            position: relative;
            z-index: 2;
        }

            .stat-box h3 {
                font-size: 3.5rem;
                font-weight: 800;
                color: var(--accent-color);
                position: relative;
                display: inline-block;
            }

                .stat-box h3::after {
                    content: "+";
                    position: absolute;
                    right: -25px;
                    top: 10px;
                    font-size: 1.5rem;
                    color: rgba(255,255,255,0.5);
                }

        /* Reviews Section */
        .reviews-section {
            padding: 5rem 0;
            background: #f8f9fa;
        }

        .review-card {
            padding: 2.5rem;
            border-radius: 15px;
            height: 100%;
            position: relative;
            overflow: hidden;
            transition: transform 0.3s ease;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }

            .review-card:hover {
                transform: translateY(-10px);
            }

        .card-1 {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            border-left: 5px solid #4e54c8;
        }

        .card-2 {
            background: linear-gradient(135deg, #e0f7fa 0%, #b2ebf2 100%);
            border-left: 5px solid #00bcd4;
        }

        .card-3 {
            background: linear-gradient(135deg, #fce4ec 0%, #f8bbd0 100%);
            border-left: 5px solid #e91e63;
        }

        .quote-icon {
            font-size: 5rem;
            line-height: 1;
            color: rgba(0,0,0,0.1);
            position: absolute;
            top: 10px;
            right: 20px;
            font-family: serif;
        }

        .review-text {
            font-size: 1.1rem;
            line-height: 1.6;
            margin-bottom: 2rem;
            position: relative;
            z-index: 2;
        }

        .reviewer-info {
            display: flex;
            align-items: center;
            margin-top: 1.5rem;
        }

        .avatar {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            overflow: hidden;
            margin-right: 15px;
            border: 3px solid white;
            box-shadow: 0 3px 10px rgba(0,0,0,0.1);
        }

            .avatar img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        .reviewer-details h5 {
            margin-bottom: 0.2rem;
            font-weight: 600;
        }

        .reviewer-details p {
            color: #666;
            font-size: 0.9rem;
            margin-bottom: 0;
        }

        @@media (max-width: 768px) {
            .review-card {
                margin-bottom: 2rem;
            }
        }

        /* Responsive Design */
        @@media (max-width: 768px) {
            .hero-section {
                clip-path: polygon(0 0, 100% 0, 100% 95%, 0 100%);
                margin-bottom: -15%;
                min-height: 600px;
            }

            .hero-title {
                font-size: 2.5rem;
            }

            .hero-subtitle {
                font-size: 1.25rem;
            }

            .section-divider {
                height: 80px;
            }

            .features-section,
            .about-library,
            .library-stats,
            .reviews-section {
                clip-path: none;
                margin: 0;
                padding: 4rem 0;
            }

            .feature-box {
                padding: 1.5rem;
                margin: 0.5rem;
            }

            .stat-box h3 {
                font-size: 2.5rem;
            }
        }
    </style>
}

