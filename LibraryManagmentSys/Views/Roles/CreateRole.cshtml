@model BLL__Buisness_Logic_Layer_.Dtos.AccountManager.RoleDto

@{
    ViewData["Title"] = "Create New Role";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-lg rounded-4 border-0">
                <div class="card-header bg-gradient-primary text-white py-3 rounded-top-4">
                    <h2 class="h4 mb-0"><i class="fas fa-user-tag me-2"></i>Create New Role</h2>
                </div>
                <div class="card-body p-4">
                    <form asp-action="CreateRole" method="post" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>

                        <div class="mb-4">
                            <label asp-for="RoleName" class="form-label fw-bold">Role Name *</label>
                            <div class="input-group has-validation">
                                <span class="input-group-text bg-light"><i class="fas fa-tag"></i></span>
                                <input asp-for="RoleName" class="form-control" required />
                                <div class="invalid-feedback">
                                    Please provide role name.
                                </div>
                            </div>
                            <span asp-validation-for="RoleName" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary me-md-2">
                                <i class="fas fa-times me-1"></i> Cancel
                            </a>
                            <button type="submit" class="btn bg-gradient-success">
                                <i class="fas fa-save me-1"></i> Create Role
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .bg-gradient-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        .bg-gradient-success {
            background: linear-gradient(135deg, #2af598 0%, #009efd 100%);
            border: none;
            color: white;
        }

        .rounded-4 {
            border-radius: 1rem !important;
        }

        .input-group-text {
            min-width: 45px;
            justify-content: center;
        }

        .form-control:focus {
            box-shadow: 0 0 0 0.25rem rgba(102, 126, 234, 0.25);
            border-color: #667eea;
        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <script>
        // Bootstrap validation
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })();
    </script>
}