@model BLL__Buisness_Logic_Layer_.Dtos.AccountManager.Register

@{
    ViewData["Title"] = "Register";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-xl-8">
            <div class="card shadow-lg rounded-4 overflow-hidden border-0">
                <div class="card-header bg-gradient-primary text-white text-center py-4">
                    <h1 class="h3 mb-0"><i class="fas fa-user-plus me-2"></i>Create New Account</h1>
                </div>
                <div class="card-body p-5">
                    <form asp-action="Register" method="post" class="needs-validation" novalidate>
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>

                        <div class="row g-4">
                            <!-- Personal Information Section -->
                            <div class="col-12">
                                <h3 class="h5 mb-3 text-primary"><i class="fas fa-user-circle me-2"></i>Personal Information</h3>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="FirstName" class="form-label fw-bold">First Name *</label>
                                <div class="input-group has-validation">
                                    <span class="input-group-text bg-light"><i class="fas fa-user"></i></span>
                                    <input asp-for="FirstName" class="form-control form-control-lg" placeholder="Enter your first name" required />
                                    <div class="invalid-feedback">
                                        Please provide your first name.
                                    </div>
                                </div>
                                <span asp-validation-for="FirstName" class="text-danger small d-block mt-1"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="LastName" class="form-label fw-bold">Last Name *</label>
                                <div class="input-group has-validation">
                                    <span class="input-group-text bg-light"><i class="fas fa-user"></i></span>
                                    <input asp-for="LastName" class="form-control form-control-lg" placeholder="Enter your last name" required />
                                    <div class="invalid-feedback">
                                        Please provide your last name.
                                    </div>
                                </div>
                                <span asp-validation-for="LastName" class="text-danger small d-block mt-1"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="DateOfBirth" class="form-label fw-bold">Date of Birth</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="fas fa-calendar-alt"></i></span>
                                    <input asp-for="DateOfBirth" class="form-control form-control-lg" type="date" />
                                </div>
                                <span asp-validation-for="DateOfBirth" class="text-danger small d-block mt-1"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Gender" class="form-label fw-bold">Gender</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="fas fa-venus-mars"></i></span>
                                    <select asp-for="Gender" class="form-select form-select-lg">
                                        <option value="">-- Select Gender --</option>
                                        <option value="Male">Male</option>
                                        <option value="Female">Female</option>
                                    </select>
                                </div>
                                <span asp-validation-for="Gender" class="text-danger small d-block mt-1"></span>
                            </div>

                            <!-- Account Information Section -->
                            <div class="col-12 mt-4">
                                <h3 class="h5 mb-3 text-primary"><i class="fas fa-key me-2"></i>Account Information</h3>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="UserName" class="form-label fw-bold">Username *</label>
                                <div class="input-group has-validation">
                                    <span class="input-group-text bg-light"><i class="fas fa-at"></i></span>
                                    <input asp-for="UserName" class="form-control form-control-lg" placeholder="Choose a username" required />
                                    <div class="invalid-feedback">
                                        Please choose a username.
                                    </div>
                                </div>
                                <span asp-validation-for="UserName" class="text-danger small d-block mt-1"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label fw-bold">Email *</label>
                                <div class="input-group has-validation">
                                    <span class="input-group-text bg-light"><i class="fas fa-envelope"></i></span>
                                    <input asp-for="Email" class="form-control form-control-lg" type="email" placeholder="your@email.com" required />
                                    <div class="invalid-feedback">
                                        Please provide a valid email address.
                                    </div>
                                </div>
                                <span asp-validation-for="Email" class="text-danger small d-block mt-1"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Password" class="form-label fw-bold">Password *</label>
                                <div class="input-group has-validation">
                                    <span class="input-group-text bg-light"><i class="fas fa-lock"></i></span>
                                    <input asp-for="Password" class="form-control form-control-lg" type="password" placeholder="At least 8 characters" required />
                                    <div class="invalid-feedback">
                                        Password must be at least 8 characters.
                                    </div>
                                </div>
                                <span asp-validation-for="Password" class="text-danger small d-block mt-1"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="ConfirmPassword" class="form-label fw-bold">Confirm Password *</label>
                                <div class="input-group has-validation">
                                    <span class="input-group-text bg-light"><i class="fas fa-lock"></i></span>
                                    <input asp-for="ConfirmPassword" class="form-control form-control-lg" type="password" placeholder="Retype your password" required />
                                    <div class="invalid-feedback">
                                        Passwords must match.
                                    </div>
                                </div>
                                <span asp-validation-for="ConfirmPassword" class="text-danger small d-block mt-1"></span>
                            </div>

                            <!-- Contact Information Section -->
                            <div class="col-12 mt-4">
                                <h3 class="h5 mb-3 text-primary"><i class="fas fa-address-card me-2"></i>Contact Information</h3>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="PhoneNumber" class="form-label fw-bold">Phone Number</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="fas fa-phone"></i></span>
                                    <input asp-for="PhoneNumber" class="form-control form-control-lg" placeholder="+1234567890" />
                                </div>
                                <span asp-validation-for="PhoneNumber" class="text-danger small d-block mt-1"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Address" class="form-label fw-bold">Address</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="fas fa-map-marker-alt"></i></span>
                                    <input asp-for="Address" class="form-control form-control-lg" placeholder="Your full address" />
                                </div>
                                <span asp-validation-for="Address" class="text-danger small d-block mt-1"></span>
                            </div>

                            <!-- Submit Button -->
                            <div class="col-12 mt-5">
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-primary btn-lg py-3">
                                        <i class="fas fa-user-plus me-2"></i> Create Account
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center py-4">
                    <p class="mb-0">Already have an account? <a asp-action="Login" class="fw-bold">Sign in here</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .bg-gradient-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        body {
            background-color: #f8f9fa;
        }

        .card {
            border: none;
            box-shadow: 0 0.5rem 1.5rem rgba(0, 0, 0, 0.15);
        }

        .form-control, .form-select {
            padding: 0.75rem 1rem;
            font-size: 1.05rem;
        }

            .form-control:focus, .form-select:focus {
                box-shadow: 0 0 0 0.25rem rgba(102, 126, 234, 0.25);
                border-color: #667eea;
            }

        .btn-primary {
            background-color: #667eea;
            border-color: #667eea;
            font-size: 1.1rem;
            letter-spacing: 0.5px;
        }

            .btn-primary:hover {
                background-color: #5a6fd5;
                border-color: #5a6fd5;
            }

        .input-group-text {
            min-width: 45px;
            justify-content: center;
        }

        h1, h2, h3, h4, h5, h6 {
            font-weight: 600;
        }

        label {
            margin-bottom: 0.5rem;
        }

        .invalid-feedback {
            font-size: 0.9rem;
        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <script>
        // Bootstrap validation
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })();
    </script>
}