@model BLL__Buisness_Logic_Layer_.Dtos.CategoryDto.CategoryUpdateDto

@{
    ViewData["Title"] = "Edit Category";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg rounded-4 border-0">
                <div class="card-header bg-gradient-primary text-white py-3 rounded-top-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2 class="h4 mb-0"><i class="bi bi-pencil-square me-2"></i>Edit Category</h2>
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-sm btn-light">
                            <i class="bi bi-eye-fill me-1"></i> View Details
                        </a>
                    </div>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post" class="needs-validation" novalidate>
                        <input type="hidden" asp-for="Id" />

                        <div class="row g-3">
                            <!-- Category Name -->
                            <div class="col-md-12">
                                <label asp-for="Name" class="form-label fw-bold">Category Name *</label>
                                <div class="input-group has-validation">
                                    <span class="input-group-text bg-light"><i class="bi bi-card-heading"></i></span>
                                    <input asp-for="Name" class="form-control" required />
                                    <div class="invalid-feedback">
                                        Please provide a category name.
                                    </div>
                                </div>
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>

                            <!-- Description -->
                            <div class="col-md-12">
                                <label asp-for="Description" class="form-label fw-bold">Description</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light align-items-start pt-2">
                                        <i class="bi bi-text-paragraph"></i>
                                    </span>
                                    <textarea asp-for="Description" class="form-control" rows="5">@Model.Description</textarea>
                                </div>
                                <span asp-validation-for="Description" class="text-danger small"></span>
                            </div>

                            <!-- Last Updated Info (Optional) -->
                            <div class="col-12">
                                <div class="alert alert-light border small mb-0">
                                    <i class="bi bi-info-circle me-2"></i>Last updated: @DateTime.Now.ToString("g")
                                </div>
                            </div>

                            <!-- Action Buttons -->
                            <div class="col-12 mt-4">
                                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary me-md-2">
                                        <i class="bi bi-x-circle me-1"></i> Cancel
                                    </a>
                                    <button type="submit" class="btn bg-gradient-success">
                                        <i class="bi bi-save-fill me-1"></i> Save Changes
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .bg-gradient-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        .bg-gradient-success {
            background: linear-gradient(135deg, #2af598 0%, #009efd 100%);
            border: none;
            color: white;
        }

        .rounded-4 {
            border-radius: 1rem !important;
        }

        .card {
            border: none;
            overflow: hidden;
        }

        .input-group-text {
            min-width: 45px;
            justify-content: center;
        }

        .form-control:focus, .form-select:focus {
            box-shadow: 0 0 0 0.25rem rgba(102, 126, 234, 0.25);
            border-color: #667eea;
        }

        textarea.form-control {
            min-height: 120px;
            resize: vertical;
        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Bootstrap validation
        (function () {
            'use strict'

            var forms = document.querySelectorAll('.needs-validation')

            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }

                        form.classList.add('was-validated')
                    }, false)
                })
        })()

        // Auto-resize textarea based on content
        document.addEventListener('DOMContentLoaded', function() {
            const textarea = document.querySelector('textarea');

            function adjustHeight() {
                textarea.style.height = 'auto';
                textarea.style.height = (textarea.scrollHeight) + 'px';
            }

            textarea.addEventListener('input', adjustHeight);
            adjustHeight(); // Initial adjustment
        });
    </script>
}